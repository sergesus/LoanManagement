<Window x:Class="LoanManagement.Desktop.wpfLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Login" Height="175.94" Width="362.031" Loaded="Window_Loaded_1">
    <Grid Margin="0,0,2,-4">
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="121" Margin="10,23,0,0" FontFamily="Cambria" FontSize="22"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Height="25" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" Margin="131,33,0,0" FontFamily="Cambria" FontSize="18"/>
        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="121" Margin="10,54,0,0" FontFamily="Cambria" FontSize="22"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Height="26" Margin="131,63,0,0" VerticalAlignment="Top" Width="205"/>
        <Button x:Name="btnLogIn" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="246,94,0,0" Height="33" FontFamily="Cambria" FontSize="22" Click="btnLogIn_Click"/>

    </Grid>
</Window>
