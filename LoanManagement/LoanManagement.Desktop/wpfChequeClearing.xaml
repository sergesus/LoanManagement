            </DataGrid.Resources>
        </DataGrid>
        <DataGrid x:Name="dg2" HorizontalAlignment="Left" Height="228" Margin="522,88,0,0" VerticalAlignment="Top" Width="507" Grid.ColumnSpan="2" FontSize="18" GridLinesVisibility="Horizontal">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
    					Color="#CC48CB00"/>
            </DataGrid.Resources>
        </DataGrid>
        <TextBox HorizontalAlignment="Left" Height="32" Margin="109,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="408"/>
