        <Button x:Name="btnContinue_Copy2" HorizontalAlignment="Left" Height="39" Margin="526,321,0,0" VerticalAlignment="Top" Width="100" BorderBrush="#CC48CB00" BorderThickness="2" Background="#7F48CB00" Click="Button_Click_2">
