            <Label Content="Cheque Clearing" HorizontalAlignment="Left" Height="54" Margin="87,10,0,0" VerticalAlignment="Top" Width="285" FontSize="30"/>
        </Grid>
        <Button x:Name="btnContinue" HorizontalAlignment="Left" Height="39" Margin="429,367,0,0" VerticalAlignment="Top" Width="164" BorderBrush="#CC48CB00" BorderThickness="2" Background="#7F48CB00" Click="Button_Click_4">
            <DockPanel LastChildFill="True">
                <Label x:Name="Continue" HorizontalContentAlignment="Center" DockPanel.Dock="Right" Foreground="#FF343434" Height="31" FontSize="16" Content="Continue"/>
                <Image Source="Images/Cont.ico" />
            </DockPanel>
        </Button>
        <Button x:Name="btnContinue_Copy" HorizontalAlignment="Left" Height="39" Margin="306,320,0,0" VerticalAlignment="Top" Width="100" BorderBrush="#CC48CB00" BorderThickness="2" Background="#7F48CB00" Click="Button_Click">
