<Controls:MetroWindow x:Name="wdw1" x:Class="LoanManagement.Desktop.wpfMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        Title="wpfMain" Height="560" Width="1114" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Activated="MetroWindow_Activated_1" Loaded="wdw1_Loaded">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Colours.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/Blue.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.AnimatedTabControl.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Controls:MetroWindow.WindowCommands>
        <Controls:WindowCommands x:Name="S">
            <Button Content="Settings" Click="btnSettings_Click"/>
        </Controls:WindowCommands>
        
    </Controls:MetroWindow.WindowCommands>
    <Grid HorizontalAlignment="Left" Height="518" VerticalAlignment="Top" Width="1104">
        <Grid.RowDefinitions>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="107*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="grdBG" HorizontalAlignment="Left" Height="535" Margin="182,0,0,-17" Grid.RowSpan="2" VerticalAlignment="Top" Width="922"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="535" Stroke="#FFF4F4F5" VerticalAlignment="Top" Width="182" Margin="0,0,0,-17" OpacityMask="Black" Grid.RowSpan="2" Opacity="0.5"/>
        <ListBox x:Name="lb1" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="182" OpacityMask="#FFA0A0A0" BorderBrush="#FFB4A1A1" SelectionChanged="ListBox_SelectionChanged_1" Margin="0,133,0,0" Grid.RowSpan="2">
            <ListBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF9C9C9C" Offset="1"/>
                </LinearGradientBrush>
            </ListBox.Background>
            <ListBoxItem Content="File" FontSize="25"/>
            <ListBoxItem Content="Transaction" FontSize="25"/>
        </ListBox>
        <TabControl HorizontalAlignment="Left" Height="498" Margin="187,10,0,0" VerticalAlignment="Top" Width="907" Grid.RowSpan="2">
            <TabItem x:Name="tb0" Header="">
                <Grid/>
            </TabItem>
            <TabItem x:Name="tb1" Header="">
                <Grid>

                    <TabControl HorizontalAlignment="Left" Height="381" VerticalAlignment="Top" Width="901" Margin="0,10,0,0">
                        <TabItem Header="Maintenance" BorderBrush="{x:Null}" Background="Black" Foreground="Black">
                            <Grid x:Name="grdM">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="46*"/>
                                    <ColumnDefinition Width="829*"/>
                                </Grid.ColumnDefinitions>
                                <ListBox x:Name="lb1_Copy1" HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="182" OpacityMask="#FFA0A0A0" BorderBrush="#FFB4A1A1" SelectionChanged="ListBox_SelectionChanged_1" Margin="10,10,0,-57" Grid.ColumnSpan="2">
                                    <ListBox.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="#FF9C9C9C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </ListBox.Background>
                                    <ListBoxItem Content="&gt;Client" FontSize="25" Foreground="#FF32AFD4" MouseUp="ListBoxItem_MouseUp_1"/>
                                    <ListBoxItem Content="&gt;Services" FontSize="25" Foreground="#FF32AFD4" MouseUp="ListBoxItem_MouseUp_2"/>
                                    <ListBoxItem Content="&gt;Bank Info" FontSize="25" Foreground="#FF32AFD4" MouseUp="ListBoxItem_MouseUp_3"/>
                                    <ListBoxItem Content="&gt;Employee" FontSize="25" Foreground="#FF32AFD4" MouseUp="ListBoxItem_MouseUp_4"/>
                                </ListBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Log Out">
                            <Grid x:Name="grdLo">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13*"/>
                                    <ColumnDefinition Width="115*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Do you want to log out?" HorizontalAlignment="Left" Height="59" Margin="10,10,0,0" VerticalAlignment="Top" Width="286" FontSize="25" Foreground="#FF32AFD4" Grid.ColumnSpan="2"/>
                                <ListBox x:Name="lb1_Copy" HorizontalAlignment="Left" Height="293" VerticalAlignment="Top" Width="182" OpacityMask="#FFA0A0A0" BorderBrush="#FFB4A1A1" SelectionChanged="ListBox_SelectionChanged_1" Margin="26,69,0,-34" Grid.ColumnSpan="2">
                                    <ListBox.Background>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="Black" Offset="0"/>
                                            <GradientStop Color="#FF9C9C9C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </ListBox.Background>
                                    <ListBoxItem Content="&gt;Yes" FontSize="25" Selected="ListBoxItem_Selected_2" Foreground="#FF32AFD4"/>
                                </ListBox>

                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem x:Name="tb2" Header="">
                <Grid Background="White"/>
            </TabItem>
        </TabControl>
    </Grid>
</Controls:MetroWindow>
