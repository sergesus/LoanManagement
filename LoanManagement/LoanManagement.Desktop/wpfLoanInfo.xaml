        <Label x:Name="lblType" Content="(type)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,170,0,0" Width="222" FontSize="16" Foreground="Black"/>
        <Label x:Name="lblAmt" Content="(type)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,200,0,0" Width="222" FontSize="16" Foreground="Black"/>
        <Label x:Name="lblMode" Content="(type)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,262,0,0" Width="156" FontSize="16" Foreground="Black"/>
