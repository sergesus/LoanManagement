        <Label Content="Total Balance:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="497,262,0,0" Width="121" FontSize="16" Foreground="#CC48CB00" FontStyle="Italic" FontWeight="Bold"/>
        <Label x:Name="lblBal" Content="(type)" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="641,262,-1,0" Width="164" FontSize="16" Foreground="Black"/>
